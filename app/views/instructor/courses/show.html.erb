<br />
<div class="booyah-box col-xs-6 col-xs-offset-3">
  <h1 class="text-center"><%= @course.title %></h1>
  <br />
  <br />
  <div class="text-center">
    <%= link_to 'Add a new section...', new_instructor_course_section_path(@course), class: 'btn btn-primary btn-lg' %>
  </div>
  <br />
  <br />

  <div class="center">
  <ul>
    <% @course.sections.each do |section| %>
      <li>
        <%= section.title %>
    </br>
        <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'btn btn-primary btn-xs' %>
        <ul>
          <% section.lessons.each do |lesson| %>
            </li>
              <b><%= lesson.title %></b>
              -
              <%= lesson.subtitle %>
            </li>
          <% end %>
        </ul>
        <br class="clr" />
      </li>
    <% end %>
  </ul>
</div>
</div>
